include ./Elements/Button/button.pug
include ./Elements/Arrow-button/arrow-button.pug
include ./Elements/Pie-chart/pie-chart.pug
include ./Elements/Slider/Slider.pug
include ./Elements/stage/stage.pug
include ./Elements/toggle/toggle.pug
include ./Elements/tick-box/tick-box.pug
include ./Elements/news/news.pug
include ./Elements/Event/event.pug
include ./Elements/messaging/messaging.pug
include ./Elements/message-form/search.pug
include ./Elements/video/video.pug
include ./Elements/donut-chart/donut-chart.pug
include ./Elements/drop-down/drop-down.pug
include ./Elements/profil/profil.pug
include ./Elements/location/location.pug


doctype !html
html
    head
    meta(charset = 'utf-8')
    script( src='https://maps.googleapis.com/maps/api/js?key=AIzaSyAdl-cDpfExj61H5C4hORCrz7WqBBEQKlU&libraries=places&language=ru' )
    title Webpack app
    body
        div.container
            article.standard-buttons
                h2.title standard buttons
                section.standard-buttons__row
                    +ripple-button('button', 'simple-blue')(style="font-size: 18px; width: 16%;")
                    +ripple-button('button', 'simple-blue')(style="font-size: 25px; width: 25.5%;")
                    +ripple-button('button', 'simple-red')(style="font-size: 25px; width: 25.5%;" )
                    +ripple-button('button', 'simple-red')(style="font-size: 18px; width: 16%;")
                section.standard-buttons__row
                    +ripple-button('button', 'border-bottom-blue')(style="font-size: 18px; width: 16%;" )
                    +ripple-button('button', 'border-bottom-blue')(style="font-size: 25px; width: 25.5%;")
                    +ripple-button('button', 'border-bottom-red')(style="font-size: 25px; width: 25.5%;")
                    +ripple-button('button', 'border-bottom-red')(style="font-size: 18px; width: 16%;")
                section.standard-buttons__row
                    +ripple-button('button', 'white-blue')(style="font-size: 18px; color: #4eb7a8; width: 16%;" )
                    +ripple-button('button', 'white-blue')(style="font-size: 25px; color: #4eb7a8; width: 25.5%;")
                    +ripple-button('button', 'white-red')(style="font-size: 25px; color: #e75735; width: 25.5%;")
                    +ripple-button('button', 'white-red')(style="font-size: 18px; color: #e75735; width: 16%;")
            article.arrow-buttons
                h2.title arrow buttons
                section.arrow-buttons__row
                    +arrow-button('left', 'white-blue')
                    +arrow-button('right', 'white-blue') 
                    +arrow-button('left', 'gray')
                    +arrow-button('right', 'gray')
                    +arrow-button('left', 'blue-white')
                    +arrow-button('right', 'blue-white')
            article.pie-charts
                h2.title percentages / pie chart
                section.pie-charts__row
                    +Pie-chart(0, 5, '#e75735' )
                    +Pie-chart(38, 5, '#e75735' )
                    +Pie-chart(62, 5, '#e75735' )
                    +Pie-chart(89, 5, '#e75735' )
                    +Donut-chart( 0.33, {"color": '#747474', "value": 11},
                                                    {"color": '#e75735', "value": 26},
                                                    {"color": '#4eb7a8', "value": 30},
                                                    {"color": '#e5e5e5', "value": 33}
                    )
            article.sliders
                h2.title sliders
                section.slider__row
                   +Slider( '#e75735', false, true)
                   +Slider( '#4eb7a8', true, false)
            article.stages
                h2.title stages
                +Stage(5, 3, '#e5e5e5')
            article.form-elements
                h2.title form elements
                section.form-elements__row
                    form.message-form
                        div.hint-control#message-form-name
                            input(type="text" placeholder="Your Name" ).message-form_form-control.message-form__input-text
                        br
                        div.hint-control#message-form-email
                            input(type="text" placeholder="Your Email").message-form_form-control.message-form__input-text
                        br
                        textarea( placeholder="Your Message" rows="4").message-form_form-control.message-form__textarea
                        br
                        +ripple-button('submit', 'border-bottom-blue')
                    div.form-elements__control
                        h2.title toggles
                        section.toggles
                            +Toggle('toggle1',"#4eb7a8")
                            +Toggle('toggle2',"#4eb7a8")(checked)
                        h2.title tick boxes
                        section.tick-boxes
                            +tick-box('tick-box1','#4eb7a8','white')
                            +tick-box('tick-box2','#4eb7a8','white')(checked)
            article.one-more-article
                div.search
                    h2.title search / drop down
                    form.message-form
                        +Search('search1')
                        +Search('search2')
                        +Dropdown("option_name",{ value:"1", text: "option1"},
                                                { value:"2", text: "option2"},
                                                { value:"3", text: "option3"})
                article.user-profiles
                    h2.title user profile
                    +Profil('./public/profil1.jpg','John Smith','ux designer',{href: '/#', icon: 'facebook'},
                                                    {href: '/#', icon: 'twitter'},
                                                    {href: '/#', icon: 'dribbble'})(id='profil1')
                    +Profil('./public/profil2.jpg','Sarah Brown','developer',{href: '/#', icon: 'facebook'},
                                                    {href: '/#', icon: 'twitter'},
                                                    {href: '/#', icon: 'dribbble'})(id='profil2')
            article.news-events
                h2.title news & events
                secton.news-events__row
                    +News("It's all going downhill", '24 august 2013', 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed condimentum aliquet venenatis. Etiam a nisi nunc, a tincidunt eros.', './public/news.jpg' )
                    +Event('24', 'Aug', 'THIS IS THE TITLE', 'Lorem ipsum dolor sit amet, consectetur adipiscing elit.', './public/event.jpg')
            article.location
                h2.title location
                +Location('Meet us!', '1259  CALIFORNIA ST San Francisco, CA ',37.795712, -122.414756,'./public/marker.png')
            article.calendar_messaging
                section.calendar_section
                    h2.title calendar
                    div(type="text").calendar
                section.messaging_section
                    h2.title messaging
                    +Messaging('Sarah Brown', './public/profil2.jpg' ,'Hey! So are we cool to meet at the art gallery? Say 8pm', 'Yeah that sounds great. See you then.')
            article.video
                h2.title video
                +Video('https://i.vimeocdn.com/video/433176722.webp?mw=1400&mh=654', 'https://16-lvl3-pdl.vimeocdn.com/01/2596/2/62980495/156181927.mp4?expires=1498733590&token=0cfbb45741536ad59eb82')
                +Video('https://i.vimeocdn.com/video/433176722.webp?mw=1400&mh=654', 'https://www.w3schools.com/html/mov_bbb.mp4', 'https://www.w3schools.com/html/mov_bbb.ogg')