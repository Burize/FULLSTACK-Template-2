@font-face{
    
    font-family LatoBlack;
    src url(./Fonts/Lato-Black.ttf);
}

@font-face{
    
    font-family LatoLight;
    src url(./Fonts/Lato-Light.ttf);
}

.container{

    margin auto;
    width: 1200px;
    padding-top 110px;
    .title{
        
        font-family LatoBlack;
        text-align center;
        font-size 2.4em;
        
        text-transform uppercase;
        color #4f4f4f;
       
    }
    
    .standart-buttons{
      
        width 74%;
        margin auto;
        margin-bottom 5.7em;
        .standart-buttons__row{
            
            display flex;
            justify-content space-between;
            align-items flex-end;
            margin-bottom 40px;
        }
        
        .title{
            margin-bottom 3.6em;
        }
    }
    
    .arrow-buttons{
        
        width 74.5%;
         margin auto;
         margin-bottom 5.2em;
         .title{
            margin-bottom 1.8em;
        }
        
        .arrow-buttons__row{
            
           display flex;
           justify-content space-between;
        }
    }
    
     .pie-charts{
       
        width 100%;
         margin auto;
         margin-bottom 3.5em;
      
         .title{
            margin-bottom 1.2em;
        }
        
        .pie-charts__row{
               padding-right 45px;
           display flex;
           justify-content space-between;
           align-items center;
           
           .pie-chart{
               color #9d9d9d;
               font-family LatoLight;
              
           }
        }
    }
    
    .sliders{
        
          margin-bottom 5%;
          
         .title{
            margin-bottom 5.8%;
        }
        
        .slider__row{
           padding 0 1.5%;
            display flex;
            justify-content space-between;
            
            .slider{
                width 47%;
            }
        }
        
    }
    
    
    .stages{
        
        margin-bottom 8%;
         .title{
            margin-bottom 4.6%;
        }
        
          .stage{
        
         width 97%;
         margin auto;   
        }
    }
    
    .form-elements{
        
        margin-bottom 6.2%;
        
          >.title{
            margin-bottom 8%;
            }
        
        .form-elements__row{
             
            padding-left 2.6%;
            padding-right 15%;
            display flex;
            justify-content space-between;     
                
                .message-form{
            

                    .hint-control{
                        width 24.8em;
                        margin-bottom 0.4em;
                    }

                    input{
                        font-size: 1.5em;
                        width 100%;
                    }

                    textarea{
                        font-size: 1.5em;
                        width 23em;
                        margin-bottom 3%;
                    }
                    
                    button{
                        
                        font-size 1.6em;
                        float: right;
                    }
                }
                
                   .form-elements__control{

                       
                       .title{

                            &:first-child{
                                margin-top -0.25em;
                                margin-bottom 1.3em;
                            }
                            
                             &:nth-child(3){
                                margin-top 0em;
                                margin-bottom 1.65em;
                            }
                        }

                        width 25%;
                        text-align center;

                        .toggles{

                            display flex;
                            justify-content space-between;
                            margin-bottom 4em;
                        }
                        
                        .tick-boxes{
                             
                            display flex;
                            justify-content space-between;
                            padding 0 30%  0 20%;
                        }
                }
     
        }
         
    }
       
        .one-more-article{
            
            display flex;
            padding-left 2%;
            .search{
                
                text-align center;
                width 47.4%;
                
                .title{

                    font-size 2.2em;
                    margin-bottom 1.1em;
                }
                .message-form{
                    width 100%;
                    
                    .message-form__input-search{

                        width 100%;
                        font-size 1.8em;
                        margin-bottom 0.9em;
                    }
                }
            }
        }
    
  
}





