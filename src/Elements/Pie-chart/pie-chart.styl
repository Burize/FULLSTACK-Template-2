.pie-chart{
 
    position relative;
    user-select none;
    cursor default;
    color #9d9d9d;
    font-family Arial,sans-serif;
               
    .pie-chart__inner{
        
        width 100%;
        padding-top 100%;
        position absolute;
   
        .pie-chart__value{
                    
            position absolute;
            width 100%
            height 100%
            display: flex;
            justify-content center;
            align-items center;
            top 0;
                  
            span{
                        
                line-height 0.8em;
            }
        }    
    }
}

