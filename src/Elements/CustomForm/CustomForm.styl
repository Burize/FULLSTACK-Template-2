.custom-form{
    
    .custom-form__form-control{
        
        background-color #e5e5e5;
        color #888888;
        border none;
        outline none;
        border-radius 0.2em;
        font-size 1em;
        width 100%;
        box-sizing border-box;
        font-family  Aral, sans-serif;
        
        &:focus{

                outline none ;
        }
    }
   
    .custom-form__row{
        
        display flex;
        justify-content space-between;
        align-items center;
        
    }
    
    .custom-form__input-text{

        padding 0.4em 1em;
    }
    
    .custom-form__textarea{
        
        resize none;
        padding 0.8em 0.9em;
    }
    
    
    .custom-form__input-search{
        
        position relative;
        overflow hidden;
        border-radius 0.2em;
        
        
         .custom-form__form-control{
                            
            width 100%;
            padding 0.35em 1em;
            
        }
        
        svg{
            height 100%;
            width 2.3em;
            position absolute;
            top 0;
            right 0;
            background-color #e75735;
            cursor pointer;
        }
        
    }
    
    
    
input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration {
  display: none;
}



    
}



