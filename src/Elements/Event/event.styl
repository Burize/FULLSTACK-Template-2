.event{
    
    box-sizing border-box;
    background-position 50% 0%;
    background-size cover;
    background-repeat no-repeat;
    border-radius 0.3em;
    overflow hidden;
    font-family Arial, sans-serif;
    
    .event__inner{

        background-color #4eb7a8;
        margin-left 33%;
        padding 4.2em 2.4em 2.75em;
        color white;
        position relative;
        box-sizing border-box;
        
        .event__date{
            
            margin 0;
            margin-bottom 0.75em;
            font-size 3.6em;
            line-height 1em;
            
            span{
                
                font-size 2.2em;
                margin-right 0.2em;
            }
        }
        
          .event__title{
            
            
            text-transform uppercase;
            font-size 1.5em;
            margin-bottom 0.2em;
        }
        
        .event__text{
            
            margin 0;
            font-size 1.4em;
            line-height 1.2em;
            margin-bottom 4em;
        }
        
        .event__button{
            
            position absolute;
            bottom 2.75em;
            text-align center;
            width 80%;
            
             button{
                 
                width 90%;
                font-size 1.2em;  
             }
        }
       
    }
    
    
    
    &.event_orange{
        
        .event__inner{
         
            background-color #FA6900;
            
            
            button{
                
                background-color white;
                color #FA6900;
                padding 0.5em;
                
                border-bottom  solid 0.3em darken(#FA6900, 25%);
            }
        }
    }
    
        &.event_dark-blue{
        
        .event__inner{
         
            background-color #00416A;
            
            
            button{
                
                background-color white;
                color #00416A;
                padding 0.5em;
                
                border-bottom  solid 0.3em darken(#00416A, 25%);
            }
        }
    }
    
    &.event_blue{
        
        .event__inner{
         
            background-color #4eb7a8;
            
            
            button{
                
                background-color white;
                color #4eb7a8;
                padding 0.5em;
                
                border-bottom  solid 0.3em darken(#4eb7a8, 25%);
            }
        }
    }
}