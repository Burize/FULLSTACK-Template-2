.slider{
    
    position relative;
    font-family Arial, sans-serif;
    
    .slider__inner{
        
        width:100%;
        padding-top 11%;
        position relative;
        svg{
            height 100%;
            width  100%;
            position absolute;
            top 0;
            
            circle{
                cursor: pointer;
            }
        }
    }
    
    .slider-hint {
    
            width: 12%;
            background-color: #e75735;
            color: #fff;
            text-align: center;
            border-radius: 0.4em;
            padding: 0.3em 0;
            position: absolute;
            left -1%;
            z-index: 1;
            bottom : 105%;
            user-select: none;
            cursor: default;
    
            .hint__arrow {
                
                content: "";
                position: absolute;
                top: 100%;
                left: 50%;
                margin-left: -0.3em;
                border-width: 0.3em;
                border-style: solid;
                border-color: #e75735 transparent transparent transparent;
        }
    }
    
    
    .slider-scale{
        
        font-size: 0.9em;
        display flex;
        width 100%;
        justify-content space-between;
        padding 0 3%;
        margin-top -0.4em;
        box-sizing border-box;
      
        color #d1d1d1;
        user-select none;
        cursor default;
    }
}
       