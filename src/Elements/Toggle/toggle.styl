.toggle{
                        
        position relative;
        display block;
        width 3.5em;
        height 1.5em;
        border-radius 1.5em;
        cursor pointer;
        transition background 0.5s ease;
        font-family Arial, sans-serif;
        
        .toggle__circle{
            
            background-color white;
            position absolute;
            top: 0.2em;
            width 1.1em;
            height 1.1em;
            border-radius 100%;
        }        
        
    }
    .toggle_on{
        
       
        text-align left;
        
        .toggle__circle{
            left auto;
            right 5%; 
        }
     &:after{
            
            content "on";
            display block;
            position absolute;
            left 0.5em ; 
            top 0.42em;
            text-transform uppercase;
            color white;
            font-size 0.75em;
        }
    }

  
    .toggle_off{
        background-color #e5e5e5 !important;
        text-align right ;
        
        .toggle__circle{
        
             left 5% ;
        }
        
           &:after{
            
            content "off" ;
            right 0.5em ;
        }
  }